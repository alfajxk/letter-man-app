<% include ../partials/header %>

<div class="container list">
	<div class="row justify-content-around"> 
		<div class="col-12"> 
			<div class="text-center">
			<h1>List of All Incoming Memos</h1>
			<p>
				<a class="btn btn-success btn-lg btn-block" href="/inmemos/new">Store Incoming Memos</a>
			</p>
		</div>
		</div>
	</div> 
</div>

<div class="container table-list">
 <div class="row justify-content-center">
	 <div class="scrollme table-responsive">
		<table class="table table-striped table-hover table-sm" id="tbid">
			<thead class="thead-dark">
				<tr>
					<th style="width:1.5em">Date</th>
					<th style="width:3em">Number</th>
					<th style="width:3em">Sender</th>
					<th style="width:3em">Recipient</th>
					<th style="width:6em">Subject</th>
					<th style="width:4em">Remark</th>
					<th style="width:2em">User</th>
					<th style="width:1.5em">Arc</th>
					<th style="width:1.5em">Doc</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th style="width:1.5em">Date</th>
					<th style="width:3em">Number</th>
					<th style="width:3em">Sender</th>
					<th style="width:3em">Recipient</th>
					<th style="width:6em">Subject</th>
					<th style="width:4em">Remark</th>
					<th style="width:2em">User</th>
					<th style="width:1.5em">Arc</th>
					<th style="width:1.5em">Doc</th>
				</tr>
			</tfoot>
			<tbody>
				<tr>
					<% inmemos.forEach(function(inmemo){ %>
					<td style="width:1.5em"><%= inmemo.date %></td>
					<td style="width:3em"><a href="/inmemos/<%= inmemo._id %>"><%= inmemo.ltrNmbr %></a></td>
					<% if (inmemo.confidential == "No" || inmemo.confidential == null || inmemo.user.toLowerCase() == currentUser.fullname.toLowerCase() || currentUser.role == "admin") { %>
					<td style="width:3em"><%= inmemo.sender %></td>
					<td style="width:3em"><%= inmemo.recipient %></td>
					<td style="width:6em"><%= inmemo.subject %></td>
					<td style="width:4em"><%= inmemo.remark %></td>
					<% } else { %>
					<td class="text-center" style="width:3em; color:red;">=CONFIDENTIAL=</td>
					<td class="text-center" style="width:3em; color:red;">=CONFIDENTIAL=</td>
					<td class="text-center" style="width:6em; color:red;">=CONFIDENTIAL=</td>
					<td class="text-center" style="width:4em; color:red;">=CONFIDENTIAL=</td>
					<% } %>
					<td style="width:2em"><%= inmemo.user %></td>
					<td style="width:1.5em"><%= inmemo.archive %></td>
					<% if ( inmemo.documents == undefined || inmemo.documents.length == 0 ) { %>
					<td></td>
					<% } else { %>
					<td class="text-center" style="text-align:middle;width:1.5em;">
						AV
					</td>
					<% } %>
				</tr>
				<% }); %>
			</tbody>
		</table>
		</div>
 	</div>
 </div>

<% include ../partials/footer %>
<% include ../functions/indexfuncs %>