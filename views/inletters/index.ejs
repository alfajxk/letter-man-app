<% include ../partials/header %>

<div class="container list">
	<div class="row justify-content-around"> 
		<div class="col-12"> 
			<div class="text-center">
			<h1>List of All Incoming Letters</h1>
			<p>
				<a class="btn btn-success btn-lg btn-block" href="/inletters/new">Store Incoming Letter</a>
			</p>
		</div>
		</div>
	</div> 
</div>

<div class="container table-list">
 <div class="row justify-content-center">
	 <div class="scrollme table-responsive">
		<table class="table table-striped table-hover table-sm" id="tbid">
			<thead class="thead-dark">
				<tr>
					<th style="width:1.5em">Date</th>
					<th style="width:3em">Number</th>
					<th style="width:3em">Sender</th>
					<th style="width:3em">Recipient</th>
					<th style="width:6em">Subject</th>
					<th style="width:4em">Remark</th>
					<th style="width:1em">Type</th>
					<th style="width:2em">User</th>
					<th style="width:1em">Arc</th>
					<th style="width:1em">Doc</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th style="width:1.5em">Date</th>
					<th style="width:3em">Number</th>
					<th style="width:3em">Sender</th>
					<th style="width:3em">Recipient</th>
					<th style="width:6em">Subject</th>
					<th style="width:4em">Remark</th>
					<th style="width:1em">Type</th>
					<th style="width:2em">User</th>
					<th style="width:1em">Arc</th>
					<th style="width:1em">Doc</th>
				</tr>
			</tfoot>
			<tbody>
				<tr>
					<% inletters.forEach(function(inletter){ %>
					<td style="width:1.5em"><%= inletter.date %></td>
					<td style="width:3em"><a href="/inletters/<%= inletter._id %>"><%= inletter.ltrNmbr %></a></td>
					<% if (inletter.confidential == "No" || inletter.confidential == null || inletter.user.toLowerCase() == currentUser.fullname.toLowerCase() || currentUser.role == "admin") { %>
					<td style="width:3em"><%= inletter.sender %></td>
					<td style="width:3em"><%= inletter.recipient %></td>
					<td style="width:6em"><%= inletter.subject %></td>
					<td style="width:4em"><%= inletter.remark %></td>
					<% } else { %>
					<td class="text-center" style="width:3em; color:red;">=CONFIDENTIAL=</td>
					<td class="text-center" style="width:3em; color:red;">=CONFIDENTIAL=</td>
					<td class="text-center" style="width:6em; color:red;">=CONFIDENTIAL=</td>
					<td class="text-center" style="width:4em; color:red;">=CONFIDENTIAL=</td>
					<% } %>
					<td style="width:1em"><%= inletter.type %></td>
					<td style="width:2em"><%= inletter.user %></td>
					<td style="width:1em"><%= inletter.archive %></td>
					<% if ( inletter.documents == undefined || inletter.documents.length == 0 ) { %>
					<td></td>
					<% } else { %>
					<td class="text-center" style="text-align:middle;width:1em;">
						AV
					</td>
					<% } %>
				</tr>
				<% }); %>
			</tbody>
		</table>
		</div>
 	</div>
 </div>

<% include ../partials/footer %>
<% include ../functions/indexfuncs %>