<% include ../partials/header %>

<div class="container list">
  <div class="row justify-content-around"> 
    <div class="col-10"> 
      <div class="text-center">
        <h1>Show Details</h1>
        <p>
        <a class="btn btn-primary btn-lg btn-block" href="/innotes">List Incoming Notes</a>
      </p>
      </div>
    </div> 
  </div>
</div>


<div class="container">
  <div class="row justify-content-around">
  <div class=col-10>
    <form>

      <div class="form-row">
				<div class="form-group col-3">
					<label>Number</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-telegram"></i></span>
							<input class="form-control form-control-md upper" type="text" name="innote[ltrNmbr]" value="<%= innote.ltrNmbr %>" readonly>
						</div>	
					</div>
				<div class="form-group col-3">
					<label>Date (Tanggal Nota)</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
							<input class="form-control form-control-md date" type="text" name="innote[date]" value="<%= innote.date %>" readonly>
						</div>	
					</div>
				<div class="form-group col-3">
					<label>Debtor (Nasabah)</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<input class="form-control form-control-md case" type="text" name="innote[debtor]" value="<%= innote.debtor %>" readonly>
						</div>
				</div>
				<div class="form-group col-3">
					<label>Proposer</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
							<input class="form-control form-control-md case" type="text" name="innote[proposer]" value="<%= innote.proposer %>" readonly>
						</div>
				</div>
			</div>
      <div class="form-inline mb-2 mt-2">
        <label for="innote[segment]" class="mr-sm-2 mb-2">Segment Type: </label>
          <select disabled name="innote[segment]" class="custom-select mb-2 mr-sm-5">
            <% if (innote.segment == "BBG") { %>
            <option name="innote[segment]" value="BBG" selected>BBG</option>
            <% } else if (innote.segment == "CHG") { %>
            <option name="innote[segment]" value="CHG" selected>CHG (Consumer)</option>
            <% } else if (innote.segment == "MBG") { %>
            <option name="innote[segment]" value="MBG" selected>MBG (Micro)</option>
            <% } else if (innote.segment == "PWG") { %>
            <option name="innote[segment]" value="PWG" selected>PWG</option>
            <% } else { %>
            <option name="innote[segment]" value="CMG" selected>CMG (Wholesale)</option>
            <% } %>
          </select>
        <label for="innote[type]" class="mr-sm-2 mb-2">Financing Type: </label>
          <select disabled name="innote[type]" class="custom-select mb-2 mr-sm-2">
            <% if (innote.type == "New") { %>
            <option name="innote[type]" value="New" selected>New</option>
            <% } else if (innote.type == "Prolongation") { %>
            <option name="innote[type]" value="Prolongation" selected>Prolongation (Perpanjangan)</option>
            <% } else if (innote.type == "Increment") { %>
            <option name="innote[type]" value="Increment" selected>Increment (Top Up/Penambahan)</option>
            <% } else if (innote.type == "Restructure") { %>
            <option name="innote[type]" value="Restructure" selected>Restructure</option>
            <% } else if (innote.type == "Settled") { %>
            <option name="innote[type]" value="Settled" selected>Settled (Pelunasan)</option>
            <% } else if (innote.type == "Auction") { %>
            <option name="innote[type]" value="Auction" selected>Auction (Lelang)</option>
            <% } else if(innote.type == "Redemption"){ %>
            <option name="innote[type]" value="Redemption" selected>Redemption (Penebusan)</option>
            <% } else if(innote.type == "Booking"){ %>
            <option name="innote[type]" value="Booking" selected>Booking (Pencairan Plafond)</option>
            <% } else if(innote.type == "Descended"){ %>
            <option name="innote[type]" value="Descended" selected>Descended Quality (Turun Kualitas/di WO)</option>
            <% } else { %>
            <option name="innote[type]" value="Refinancing" selected>Refinancing</option>
            <% } %>
          </select>
      </div>
      <div class="form-row">
        <div class="form-group col-6">
          <label>Outstanding (OS Pokok diajukan/Sisa OS Pokok)</label>
            <div class="input-group">
              <span class="input-group-addon">Rp.</span>
              <input class="form-control form-control-md inputNumberDot" type="text" name="innote[outstanding]" value="<%= innote.outstanding %>" readonly>
            </div>
        </div>
        <div class="form-group col-6">
          <label>Exposure (Total OS Pokok)</label>
            <div class="input-group">
              <span class="input-group-addon">Rp.</span>
              <input class="form-control form-control-md inputNumberDot" type="text" name="innote[exposure]" value="<%= innote.exposure %>" readonly>
            </div>
        </div>
      </div>
      <div class="form-inline mb-2 mt-2">
        <label for="innote[level]" class="mr-sm-2 mb-2">Committee Level: </label>
          <select disabled name="innote[level]" class="custom-select mb-2 mr-sm-3">
            <% if (innote.level == "C3") { %>
            <option name="innote[level]" value="C3" selected>C3</option>
            <% } else if (innote.level == "B1") { %>
            <option name="innote[level]" value="B1" selected>B1</option>
            <% } else if (innote.level == "B2") { %>
            <option name="innote[level]" value="B2" selected>B2</option>
            <% } else if (innote.level == "A1") { %>
            <option name="innote[level]" value="A1" selected>A1</option>
            <% } else { %>
            <option name="innote[level]" value="A2" selected>A2</option>
            <% } %>
          </select> 
        <label for="innote[area]" class="mr-sm-2 mb-2">Area: </label>
          <select disabled name="innote[area]" id="area" class="custom-select mb-2 mr-sm-3">
            <% if (innote.area == "Bandung Ahmad Yani") { %>
            <option name="innote[area]" value="Bandung Ahmad Yani" selected>Bandung Ahmad Yani</option>
            <% } else if (innote.area == "Bandung Dago") { %>
            <option name="innote[area]" value="Bandung Dago" selected>Bandung Dago</option>
            <% } else if (innote.area == "Cirebon") { %>
            <option name="innote[area]" value="Cirebon" selected>Cirebon</option>
            <% } else if (innote.area == "Semarang") { %>
            <option name="innote[area]" value="Semarang" selected>Semarang</option>
            <% } else if (innote.area == "Solo") { %>
            <option name="innote[area]" value="Solo" selected>Solo</option>
            <% } else { %>
            <option name="innote[area]" value="Yogyakarta" selected>Yogyakarta</option>
            <% } %>
          </select>
      </div>  
       <div class="form-group" style="margin-right:70%;">
				<label>Archive Code:</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-archive"></i></span>
						<input class="form-control form-control-md upper" type="text" name="innote[archive]" value="<%= innote.archive %>" readonly>
					</div>	
				</div>
        <div class="form-group">
          <label>Remark (Penjelasan)</label>
          <textarea class="form-control form-control-md case" rows="2" name="innote[remark]" readonly><%= innote.remark %></textarea>
        </div>
      </form>
    <div class="container table-list">
      <div class="row justify-content-center">
        <div class="scrollme table-responsive">
          <% if (innote.documents == null || innote.documents == undefined || innote.documents.length == 0) { %>
          <% } else { %>
          <table class="table table-striped table-hover table-sm" id="tbid">
            <thead class="thead-dark text-center">
              <tr>
                <th class="text-left" style="width:30em">Documents</th>
                <% if (innote.user.toLowerCase() == currentUser.fullname.toLowerCase() || currentUser.role == "admin") { %>
                <th style="width:5em">Show File</th>
                <th style="width:5em">Delete File</th>
                <% } else { %>
                <th style="width:5em">Show File</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% innote.documents.forEach(function(document){ %>
                <td style="width:30em"><%= document.filename %></td>
                <% if (innote.user.toLowerCase() == currentUser.fullname.toLowerCase() || currentUser.role == "admin") { %>
                <td style="width:5em" class="text-center"><a href="/innotes/<%= innote._id%>/documents/<%=document._id %>" target="_blank" class="btn btn-primary btn-sm"><span class="fa fa-external-link"></span> Show</a></td>
                <form action="/innotes/<%=innote._id%>/documents/<%=document._id%>?_method=DELETE" method="POST">
                <td style="width:5em" class="text-center"><button class="btn btn-danger btn-sm"><span class="fa fa-window-close"></span> Delete</button></form>
                </td>
                <% } else { %>
                <td style="width:5em" class="text-center"><a href="/innotes/<%= innote._id%>/documents/<%=document._id %>" target="_blank" class="btn btn-primary btn-sm"><span class="fa fa-external-link"></span> Show</a></td>
                <% } %>
              </tr>
            </tbody>
            <% }) %>
          <% } %>
          </table>
        </div>
      </div>
    </div>  
        <div class="form-group">
          <input class="form-control form-control-md" type="hidden" name="innote[user]" readonly placeholder="user" value="<%= innote.user %>">
        </div>
      </form>
    </div>

    

      <div class="container row justify-content-center mx-auto">
        <% if (innote.user.toLowerCase() == currentUser.fullname.toLowerCase() || currentUser.role == "admin") { %>
        <a class="btn btn-primary mr-1" href="/innotes/<%= innote._id %>/edit"><i class="fa fa-pencil-square-o"></i> Edit</a>
        <form action="/innotes/<%= innote._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger ml-1 delete"><i class="fa fa-trash-o"></i> Delete</button>
        </form>
        <% } else { %>
        <a class="btn btn-primary mr-1" href="/innotes/<%= innote._id %>/edit"><i class="fa fa-pencil-square-o"></i> Edit</a>
        <% } %>
  </div>
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
          </div>
          <div class="modal-body">
              <p>You are about to delete record, this procedure is irreversible.</p>
              <p>Do you want to proceed?</p>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-danger btn-ok" id="delete">Delete</button>
          </div>
      </div>
  </div>
</div>

<% include ../partials/footer %>
<% include ../functions/showfuncs %>