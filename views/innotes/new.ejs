<% include ../partials/header %>

<div class="container list">
	<div class="row justify-content-around"> 
		<div class="col-10"> 
			<div class="text-center">
				<h1>Store Incoming Note Number</h1>
				<p>
				<a class="btn btn-primary btn-lg btn-block" href="/innotes">List Incoming Notes</a>
			</p>
			</div>
		</div> 
	</div>
</div>


<div class="container">
	<div class="row justify-content-around">
	<div class=col-10>
		<form action="/innotes" method="POST" enctype="multipart/form-data">

			<div class="form-row">
				<div class="form-group col-3">
					<label>Number</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-telegram"></i></span>
							<input class="form-control form-control-md upper" type="text" name="innote[ltrNmbr]" placeholder="Note's Number" required>
						</div>	
					</div>
				<div class="form-group col-3">
					<label>Date (Tanggal Nota)</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
							<input class="form-control form-control-md date" type="text" name="innote[date]" placeholder="Note's Date" required>
						</div>	
					</div>
				<div class="form-group col-3">
					<label>Debtor (Nasabah)</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<input class="form-control form-control-md case" type="text" name="innote[debtor]" placeholder="Debtor" required>
						</div>
				</div>
				<div class="form-group col-3">
					<label>Proposer</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
							<input class="form-control form-control-md case" type="text" name="innote[proposer]" placeholder="Proposer" required>
						</div>
				</div>
			</div>
			<div class="form-inline mb-2 mt-2">
				<label for="innote[segment]" class="mr-sm-2 mb-2">Select Segment Type: </label>
					<select required name="innote[segment]" class="custom-select mb-2 mr-sm-5">
						<option disabled value="" selected hidden>Choose Segment...</option>
						<option name="innote[segment]" value="BBG">BBG</option>
						<option name="innote[segment]" value="CHG">CHG (Consumer)</option>
						<option name="innote[segment]" value="MBG">MBG (Micro)</option>
						<option name="innote[segment]" value="PWG">PWG</option>
						<option name="innote[segment]" value="CMG">CMG (Wholesale)</option>
					</select>
				<label for="innote[type]" class="mr-sm-2 mb-2">Select Financing Type: </label>
					<select required name="innote[type]" class="custom-select mb-2 mr-sm-2">
						<option disabled value="" selected hidden>Choose Type...</option>
						<option name="innote[type]" value="New">New</option>
						<option name="innote[type]" value="Prolongation">Prolongation (Perpanjangan)</option>
						<option name="innote[type]" value="Increment">Increment (Top Up/Penambahan)</option>
						<option name="innote[type]" value="Restructure">Restructure</option>
						<option name="innote[type]" value="Settled">Settled (Pelunasan)</option>
						<option name="innote[type]" value="Auction">Auction (Lelang)</option>
						<option name="innote[type]" value="Redemption">Redemption (Penebusan)</option>
						<option name="innote[type]" value="Booking">Booking (Pencairan Plafond)</option>
						<option name="innote[type]" value="Descended">Descended Quality (Turun Kualitas/di WO)</option>
						<option name="innote[type]" value="Refinancing">Refinancing</option>
					</select>
			</div>
			<div class="form-row">
				<div class="form-group col-6">
					<label>Outstanding (OS Pokok diajukan/Sisa OS Pokok)</label>
						<div class="input-group">
							<span class="input-group-addon">Rp.</span>
							<input class="form-control form-control-md inputNumberDot" type="text" name="innote[outstanding]" data-toggle="tooltip" title="Only input number and put period for decimal. Do not use comma." placeholder="Outstanding" required>
						</div>
				</div>
				<div class="form-group col-6">
					<label>Exposure (Total OS Pokok)</label>
						<div class="input-group">
							<span class="input-group-addon">Rp.</span>
							<input class="form-control form-control-md inputNumberDot" type="text" name="innote[exposure]" data-toggle="tooltip" title="Only input number and put period for decimal. Do not use comma." placeholder="Exposure" required>
						</div>
				</div>
			</div>
			<div class="form-inline mb-2 mt-2">
				<label for="innote[level]" class="mr-sm-2 mb-2">Committee Level: </label>
					<select required name="innote[level]" class="custom-select mb-2 mr-sm-3">
						<option disabled value="" selected hidden>Choose Committee Level...</option>
						<option name="innote[level]" value="C3">C3</option>
						<option name="innote[level]" value="B1">B1</option>
						<option name="innote[level]" value="B2">B2</option>
						<option name="innote[level]" value="A1">A1</option>
						<option name="innote[level]" value="A2">A2</option>
					</select>	
				<label for="innote[area]" class="mr-sm-2 mb-2">Select Area:	</label>
					<select required name="innote[area]" id="area" class="custom-select mb-2 mr-sm-3">
						<option disabled value="" selected hidden>Choose Area...</option>
						<option name="innote[area]" value="Bandung Ahmad Yani">Bandung Ahmad Yani</option>
						<option name="innote[area]" value="Bandung Dago">Bandung Dago</option>
						<option name="innote[area]" value="Cirebon">Cirebon</option>
						<option name="innote[area]" value="Semarang">Semarang</option>
						<option name="innote[area]" value="Solo">Solo</option>
						<option name="innote[area]" value="Yogyakarta">Yogyakarta</option>
					</select>	
			</div>	
			<div class="form-group" style="margin-right:70%;">
				<label>Archive Code:</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-archive"></i></span>
						<input class="form-control form-control-md upper" type="text" name="innote[archive]" data-toggle="tooltip" title="See The Code of Archive on Bindex." placeholder="Archive Code">
					</div>	
			</div>
				<div class="form-group">
					<label>Remark (Penjelasan)</label>
					<textarea class="form-control form-control-md case" rows="2" name="innote[remark]"></textarea>
				</div>
				<div class="form-group">
					<label>Upload Documents (only upload a maximum of 3 pdf files): </label>
						<div class="input-group input-file customInputMargin" name="docs">
							<span class="input-group-btn">
				        		<button class="btn btn-secondary btn-choose" type="button">Choose</button>
				    		</span>
				    		<input type="text" class="form-control" placeholder='Choose pdf file..' />
				    		<span class="input-group-btn">
				       			 <button class="btn btn-warning btn-reset" type="button">Reset</button>
				    		</span>
						</div>
						<div class="input-group input-file customInputMargin" name="docs">
							<span class="input-group-btn">
				        		<button class="btn btn-secondary btn-choose" type="button">Choose</button>
				    		</span>
				    		<input type="text" class="form-control" placeholder='Choose pdf file..' />
				    		<span class="input-group-btn">
				       			 <button class="btn btn-warning btn-reset" type="button">Reset</button>
				    		</span>
						</div>
						<div class="input-group input-file customInputMargin" name="docs">
							<span class="input-group-btn">
				        		<button class="btn btn-secondary btn-choose" type="button">Choose</button>
				    		</span>
				    		<input type="text" class="form-control" placeholder='Choose pdf file..' />
				    		<span class="input-group-btn">
				       			 <button class="btn btn-warning btn-reset" type="button">Reset</button>
				    		</span>
						</div>
				</div>
				<div class="form-group">
					<input class="form-control form-control-md" type="hidden" name="innote[user]" readonly placeholder="user" value="<%= currentUser.fullname %>">
				</div>
					<input class="container-fluid btn btn-success btn-lg customSubmitMargin" type="submit">
			</form>
		</div>
	</div>
</div>
		
<% include ../partials/footer %>
<% include ../functions/innewnotefuncs %>
<% include ../functions/upload %>