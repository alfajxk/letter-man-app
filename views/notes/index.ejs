<% include ../partials/header %>

<div class="container list">
	<div class="row justify-content-around"> 
		<div class="col-12"> 
			<div class="text-center">
			<h1>List of All Outgoing Notes</h1>
			<p>
				<a class="btn btn-success btn-lg btn-block" href="/notes/new">Generate Outgoing Note Number</a>
			</p>
		</div>
		</div>
	</div> 
</div>

<div class="container table-list">
 <div class="row justify-content-center">
	 <div class="scrollme table-responsive">
		<table class="table table-striped table-hover table-sm" id="tbid">
			<thead class="thead-dark">
				<tr>
					<th style="width:3em">Number</th>
					<th style="width:1em">Date</th>
					<th style="width:3em">Debtor</th>
					<th style="width:2em">Proposer</th>
					<th style="width:1em">Segment</th>
					<th style="width:1em">Type</th>
					<th style="width:0.3em">Level</th>
					<th style="width:1em">OS M</th>
					<th style="width:1em">User</th>
					<th style="width:0.5em">Arc</th>
					<th style="width:0.5em">Doc</th>
					<th style="width:0.1em">Act</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th style="width:3em">Number</th>
					<th style="width:1em">Date</th>
					<th style="width:3em">Debtor</th>
					<th style="width:2em">Proposer</th>
					<th style="width:1em">Segment</th>
					<th style="width:1em">Type</th>
					<th style="width:0.3em">Level</th>
					<th style="width:1em">OS M</th>
					<th style="width:1em">User</th>
					<th style="width:0.5em">Arc</th>
					<th style="width:0.5em">Doc</th>
					<th disabled="disabled" style="width:0.1em">Act</th>
				</tr>
			</tfoot>
			<tbody>
				<tr>
					<% notes.forEach(function(note){ %>
					<td style="width:3em"><a href="/notes/<%= note._id %>"><%= note.ltrNmbr %></a></td>
					<td style="width:1em"><%= note.date %></td>
					<td style="width:3em"><%= note.debtor %></td>
					<td style="width:2em"><%= note.proposer %></td>
					<td style="width:1em"><%= note.segment %></td>
					<td style="width:1em"><%= note.type %></td>
					<td style="width:0.3em"><%= note.level %></td>
					<% var str = note.outstanding.replace(/,/g, ""); %>
					<% var num = str/1000000 %>
					<td class="text-right" style="width:1em"><%= accounting(num,{precision: 0}); %></td>
					<td style="width:1em"><%= note.user %></td>
					<td style="width:0.5em"><%= note.archive %></td>
					<% if ( note.documents == undefined || note.documents.length == 0 ) { %>
					<td></td>
					<% } else { %>
					<td class="text-center" style="text-align:middle;width:0.5em;">
						AV
					</td>
					<% } %>
					<td class="text-center" style="text-align:middle; width:0.1em">
						<button style="height:20px;width:6px" data-toggle="tooltip" title="Copied" class="btn btn-copy">
    					<span class="fa fa-clipboard" aria-hidden="true" style="font-size:10px; position:relative; top:-11px; right:3px;"></span>
						</button>
					</td>
				</tr>
				<% }); %>
			</tbody>
		</table>
		</div>
 	</div>
 </div>

<% include ../partials/footer %>
<% include ../functions/indexfuncs %>