<% include ../partials/header %>

<div class="container list">
  <div class="row justify-content-around"> 
    <div class="col-10"> 
      <div class="text-center">
        <h1>Show Details</h1>
        <p>
        <a class="btn btn-primary btn-lg btn-block" href="/notes">List Outgoing Notes</a>
      </p>
      </div>
    </div> 
  </div>
</div>


<div class="container">
  <div class="row justify-content-around">
  <div class=col-10>
    <form>

      <div class="form-group">
        <input class="form-control" type="hidden" name="note[counter]" placeholder="counter" value="<%= note.counter %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="hidden" name="note[prefix]" placeholder="prefix" value="<%= note.prefix %>">
      </div>
      <div class="form-row">
        <div class="form-group col-4">
          <!-- Number -->
          <label>Number</label>
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-telegram"></i></span>
              <input class="form-control form-control-md" type="text" name="note[ltrNmbr]" placeholder="ltrNmbr" value="<%= note.ltrNmbr %>" readonly>
            </div>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-3">
          <label>Date</label>
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
              <input class="form-control form-control-md" id="nowdate" type="text" name="note[date]"  value="<%= note.date %>" readonly>
            </div>  
          </div>
        <div class="form-group col-5">
          <label>Debtor (Nasabah)</label>
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-user"></i></span>
              <input class="form-control form-control-md case" type="text" name="note[debtor]" value="<%= note.debtor %>" readonly>
            </div>
        </div>
        <div class="form-group col-4">
          <label>Proposer</label>
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
              <input class="form-control form-control-md case" type="text" name="note[proposer]" value="<%= note.proposer %>" readonly>
            </div>
        </div>
      </div>
      <div class="form-inline mb-2 mt-2">
        <label for="note[segment]" class="mr-sm-2 mb-2">Segment Type: </label>
          <select disabled name="note[segment]" class="custom-select mb-2 mr-sm-5">
            <% if (note.segment == "BBG") { %>
            <option name="note[segment]" value="BBG" selected>BBG</option>
            <% } else if (note.segment == "CHG") { %>
            <option name="note[segment]" value="CHG" selected>CHG (Consumer)</option>
            <% } else if (note.segment == "MBG") { %>
            <option name="note[segment]" value="MBG" selected>MBG (Micro)</option>
            <% } else if (note.segment == "PWG") { %>
            <option name="note[segment]" value="PWG" selected>PWG</option>
            <% } else { %>
            <option name="note[segment]" value="CMG" selected>CMG (Wholesale)</option>
            <% } %>
          </select>
        <label for="note[type]" class="mr-sm-2 mb-2">Financing Type: </label>
          <select disabled name="note[type]" class="custom-select mb-2 mr-sm-2">
            <% if (note.type == "New") { %>
            <option name="note[type]" value="New" selected>New</option>
            <% } else if (note.type == "Prolongation") { %>
            <option name="note[type]" value="Prolongation" selected>Prolongation (Perpanjangan)</option>
            <% } else if (note.type == "Increment") { %>
            <option name="note[type]" value="Increment" selected>Increment (Top Up/Penambahan)</option>
            <% } else if (note.type == "Restructure") { %>
            <option name="note[type]" value="Restructure" selected>Restructure</option>
            <% } else if (note.type == "Settled") { %>
            <option name="note[type]" value="Settled" selected>Settled (Pelunasan)</option>
            <% } else if (note.type == "Auction") { %>
            <option name="note[type]" value="Auction" selected>Auction (Lelang)</option>
            <% } else if (note.type == "Redemption") { %>
            <option name="note[type]" value="Redemption" selected>Redemption (Penebusan)</option>
            <% } else if (note.type == "Booking") { %>
            <option name="note[type]" value="Booking" selected>Booking (Pencairan Plafond)</option>
            <% } else if (note.type == "Descended") { %>
            <option name="note[type]" value="Descended" selected>Descended Quality (Turun Kualitas/di WO)</option>
            <% } else { %>
            <option name="note[type]" value="Refinancing" selected>Refinancing</option>
            <% } %>
          </select>
      </div>
      <div class="form-row">
        <div class="form-group col-6">
          <label>Outstanding (OS Pokok diajukan/Sisa OS Pokok)</label>
            <div class="input-group">
              <span class="input-group-addon">Rp.</span>
              <input class="form-control form-control-md inputNumberDot" type="text" name="note[outstanding]" value="<%= note.outstanding %>" readonly>
            </div>
        </div>
        <div class="form-group col-6">
          <label>Exposure (Total OS Pokok)</label>
            <div class="input-group">
              <span class="input-group-addon">Rp.</span>
              <input class="form-control form-control-md inputNumberDot" type="text" name="note[exposure]" value="<%= note.exposure %>" readonly>
            </div>
        </div>
      </div>
      <div class="form-inline mb-2 mt-2">
        <label for="note[level]" class="mr-sm-2 mb-2">Committee Level: </label>
          <select disabled name="note[level]" class="custom-select mb-2 mr-sm-3">
            <% if (note.level == "C3") { %>
            <option name="note[level]" value="C3" selected>C3</option>
            <% } else if (note.level == "B1") { %>
            <option name="note[level]" value="B1" selected>B1</option>
            <% } else if (note.level == "B2") { %>
            <option name="note[level]" value="B2" selected>B2</option>
            <% } else if (note.level == "A1") { %>
            <option name="note[level]" value="A1" selected>A1</option>
            <% } else { %>
            <option name="note[level]" value="A2" selected>A2</option>
            <% } %>
          </select> 
        <label for="note[area]" class="mr-sm-2 mb-2">Area: </label>
          <select disabled name="note[area]" id="area" class="custom-select mb-2 mr-sm-3">
            <% if (note.area == "Bandung Ahmad Yani") { %>
            <option name="note[area]" value="Bandung Ahmad Yani" selected>Bandung Ahmad Yani</option>
            <% } else if (note.area == "Bandung Dago") { %>
            <option name="note[area]" value="Bandung Dago" selected>Bandung Dago</option>
            <% } else if (note.area == "Cirebon") { %>
            <option name="note[area]" value="Cirebon" selected>Cirebon</option>
            <% } else if (note.area == "Semarang") { %>
            <option name="note[area]" value="Semarang" selected>Semarang</option>
            <% } else if (note.area == "Solo") { %>
            <option name="note[area]" value="Solo" selected>Solo</option>
            <% } else { %>
            <option name="note[area]" value="Yogyakarta" selected>Yogyakarta</option>
            <% } %>
          </select>
        <label for="note[foureyes]" class="mr-sm-2 mb-2">Four Eyes: </label>
          <select disabled name="note[foureyes]" class="custom-select mb-2 mr-sm-2">
            <% if (note.foureyes == "Yes") { %>
            <option name="note[foureyes]" value="Yes">Yes</option>
            <% } else { %>
            <option name="note[foureyes]" value="No">No</option>
            <% } %>
          </select> 
      </div>  
      <div class="form-group" style="margin-right:70%;">
				<label>Archive Code:</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-archive"></i></span>
						<input class="form-control form-control-md upper" type="text" name="note[archive]" value="<%= note.archive %>" readonly>
					</div>	
			</div> 
        <div class="form-group">
          <label>Remark (Penjelasan)</label>
          <textarea class="form-control form-control-md case" rows="2" name="note[remark]" readonly><%= note.remark %></textarea>
        </div>
          
        <div class="form-group">
          <input class="form-control form-control-md" type="hidden" name="note[user]" readonly placeholder="user" value="<%= note.user %>">
        </div>
      </form>
      <div class="container table-list">
      <div class="row justify-content-center">
        <div class="scrollme table-responsive">
          <% if (note.documents == null || note.documents == undefined || note.documents.length == 0) { %>
          <% } else { %>
          <table class="table table-striped table-hover table-sm" id="tbid">
            <thead class="thead-dark text-center">
              <tr>
                <th class="text-left" style="width:30em">Documents</th>
                <% if (note.user.toLowerCase() == currentUser.fullname.toLowerCase() || currentUser.role == "admin") { %>
                <th style="width:5em">Show File</th>
                <th style="width:5em">Delete File</th>
                <% } else { %>
                <th style="width:5em">Show File</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% note.documents.forEach(function(document){ %>
                <td style="width:30em"><%= document.filename %></td>
                <% if (note.user.toLowerCase() == currentUser.fullname.toLowerCase() || currentUser.role == "admin") { %>
                <td style="width:5em" class="text-center"><a href="/notes/<%= note._id%>/documents/<%=document._id %>" target="_blank" class="btn btn-primary btn-sm"><span class="fa fa-external-link"></span> Show</a></td>
                <form action="/notes/<%=note._id%>/documents/<%=document._id%>?_method=DELETE" method="POST">
                <td style="width:5em" class="text-center"><button class="btn btn-danger btn-sm"><span class="fa fa-window-close"></span> Delete</button></form>
                </td>
                <% } else { %>
                <td style="width:5em" class="text-center"><a href="/notes/<%= note._id%>/documents/<%=document._id %>" target="_blank" class="btn btn-primary btn-sm"><span class="fa fa-external-link"></span> Show</a></td>
                <% } %>
              </tr>
            </tbody>
            <% }) %>
          <% } %>
          </table>
        </div>
      </div>
    </div>
    </div>
      <div class="container row justify-content-center mx-auto">
        <% if (note.user.toLowerCase() == currentUser.fullname.toLowerCase() || currentUser.role == "admin") { %>
        <a class="btn btn-primary mr-1" href="/notes/<%= note._id %>/edit"><i class="fa fa-pencil-square-o"></i> Edit</a>
        <form action="/notes/<%= note._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger ml-1 delete"><i class="fa fa-trash-o"></i> Delete</button>
        </form>
        <% } else { %>
        <a class="btn btn-primary mr-1" href="/notes/<%= note._id %>/edit"><i class="fa fa-pencil-square-o"></i> Edit</a>
        <% } %>
  </div>
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
          </div>
          <div class="modal-body">
              <p>You are about to delete record, this procedure is irreversible.</p>
              <p>Do you want to proceed?</p>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-danger btn-ok" id="delete">Delete</button>
          </div>
      </div>
  </div>
</div>

<% include ../partials/footer %>
<% include ../functions/showfuncs %>