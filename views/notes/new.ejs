<% include ../partials/header %>

<div class="container list">
	<div class="row justify-content-around"> 
		<div class="col-10"> 
			<div class="text-center">
				<h1>Generate Outgoing Note Number</h1>
				<p>
				<a class="btn btn-primary btn-lg btn-block" href="/notes">List Outgoing Notes</a>
			</p>
			</div>
		</div> 
	</div>
</div>


<div class="container">
	<div class="row justify-content-around">
	<div class=col-10>
		<form action="/notes" method="POST" enctype="multipart/form-data">
			
			<div id='change'>
				<div class="form-group">
					<input class="form-control" type="hidden" name="note[counter]" placeholder="counter" value="<%= lastId %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="hidden" name="note[prefix]" placeholder="prefix" value="<%= prefix %>">
				</div>
				<!--NUMBER FIELD-->
				<div class="form-group">
					<input class="form-control form-control-md" type="hidden" name="note[ltrNmbr]" placeholder="ltrNmbr" value="<%= prefix+slh+preNmbr[JSON.stringify(lastId).length]+lastId+suffixNote %>" required>
				</div>
			</div>

			<div class="form-row">
				<div class="form-group col-3">
					<label>Date</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
							<input class="form-control form-control-md" id="nowdate" type="text" name="note[date]" required>
						</div>	
					</div>
				<div class="form-group col-5">
					<label>Debtor (Nasabah)</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<input class="form-control form-control-md case" type="text" name="note[debtor]" placeholder="Debtor" required>
						</div>
				</div>
				<div class="form-group col-4">
					<label>Proposer</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
							<input class="form-control form-control-md case" type="text" name="note[proposer]" placeholder="Proposer" required>
						</div>
				</div>
			</div>
			<div class="form-inline mb-2 mt-2">
				<label for="note[segment]" class="mr-sm-2 mb-2">Select Segment Type: </label>
					<select required name="note[segment]" class="custom-select mb-2 mr-sm-5">
						<option disabled value="" selected hidden>Choose Segment...</option>
						<option name="note[segment]" value="BBG">BBG</option>
						<option name="note[segment]" value="CHG">CHG (Consumer)</option>
						<option name="note[segment]" value="MBG">MBG (Micro)</option>
						<option name="note[segment]" value="PWG">PWG</option>
						<option name="note[segment]" value="CMG">CMG (Wholesale)</option>
					</select>
				<label for="note[type]" class="mr-sm-2 mb-2">Select Financing Type: </label>
					<select required name="note[type]" class="custom-select mb-2 mr-sm-2">
						<option disabled value="" selected hidden>Choose Type...</option>
						<option name="note[type]" value="New">New</option>
						<option name="note[type]" value="Prolongation">Prolongation (Perpanjangan)</option>
						<option name="note[type]" value="Increment">Increment (Top Up/Penambahan)</option>
						<option name="note[type]" value="Restructure">Restructure</option>
						<option name="note[type]" value="Settled">Settled (Pelunasan)</option>
						<option name="note[type]" value="Auction">Auction (Lelang)</option>
						<option name="note[type]" value="Redemption">Redemption (Penebusan)</option>
						<option name="note[type]" value="Booking">Booking (Pencairan Plafond)</option>
						<option name="note[type]" value="Descended">Descended Quality (Turun Kualitas/di WO)</option>
						<option name="note[type]" value="Refinancing">Refinancing</option>
					</select>
			</div>
			<div class="form-row">
				<div class="form-group col-6">
					<label>Outstanding (OS Pokok diajukan/Sisa OS Pokok)</label>
						<div class="input-group">
							<span class="input-group-addon">Rp.</span>
							<input class="form-control form-control-md inputNumberDot" type="text" name="note[outstanding]" data-toggle="tooltip" title="Only input number and put period for decimal. Do not use comma." placeholder="Outstanding" required>
						</div>
				</div>
				<div class="form-group col-6">
					<label>Exposure (Total OS Pokok)</label>
						<div class="input-group">
							<span class="input-group-addon">Rp.</span>
							<input class="form-control form-control-md inputNumberDot" type="text" name="note[exposure]" data-toggle="tooltip" title="Only input number and put period for decimal. Do not use comma." placeholder="Exposure" required>
						</div>
				</div>
			</div>
			<div class="form-inline mb-2 mt-2">
				<label for="note[level]" class="mr-sm-2 mb-2">Committee Level: </label>
					<select required name="note[level]" class="custom-select mb-2 mr-sm-3">
						<option disabled value="" selected hidden>Choose Committee Level...</option>
						<option name="note[level]" value="C3">C3</option>
						<option name="note[level]" value="B1">B1</option>
						<option name="note[level]" value="B2">B2</option>
						<option name="note[level]" value="A1">A1</option>
						<option name="note[level]" value="A2">A2</option>
					</select>	
				<label for="note[area]" class="mr-sm-2 mb-2">Select Area:	</label>
					<select required name="note[area]" id="area" class="custom-select mb-2 mr-sm-3">
						<option disabled value="" selected hidden>Choose Area...</option>
						<option name="note[area]" value="Bandung Ahmad Yani">Bandung Ahmad Yani</option>
						<option name="note[area]" value="Bandung Dago">Bandung Dago</option>
						<option name="note[area]" value="Cirebon">Cirebon</option>
						<option name="note[area]" value="Semarang">Semarang</option>
						<option name="note[area]" value="Solo">Solo</option>
						<option name="note[area]" value="Yogyakarta">Yogyakarta</option>
					</select>
				<label for="note[foureyes]" class="mr-sm-2 mb-2">Four Eyes:	</label>
					<select required name="note[foureyes]" class="custom-select mb-2 mr-sm-2">
						<option disabled value="" selected hidden>Yes or NO ?...</option>
						<option name="note[foureyes]" value="Yes">Yes</option>
						<option name="note[foureyes]" value="No">No</option>
					</select>	
			</div>	
			<div class="form-group" style="margin-right:70%;">
				<label>Archive Code:</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-archive"></i></span>
						<input class="form-control form-control-md upper" type="text" name="note[archive]" data-toggle="tooltip" title="See The Code of Archive on Bindex." placeholder="Archive Code">
					</div>	
			</div>
				<div class="form-group">
					<label>Remark (Penjelasan)</label>
					<textarea class="form-control form-control-md case" rows="2" name="note[remark]"></textarea>
				</div>
				<div class="form-group">
					<label>Upload Documents (only upload a maximum of 3 pdf files): </label>
						<div class="input-group input-file customInputMargin" name="docs">
							<span class="input-group-btn">
				        		<button class="btn btn-secondary btn-choose" type="button">Choose</button>
				    		</span>
				    		<input type="text" class="form-control" placeholder='Choose pdf file..' />
				    		<span class="input-group-btn">
				       			 <button class="btn btn-warning btn-reset" type="button">Reset</button>
				    		</span>
						</div>
						<div class="input-group input-file customInputMargin" name="docs">
							<span class="input-group-btn">
				        		<button class="btn btn-secondary btn-choose" type="button">Choose</button>
				    		</span>
				    		<input type="text" class="form-control" placeholder='Choose pdf file..' />
				    		<span class="input-group-btn">
				       			 <button class="btn btn-warning btn-reset" type="button">Reset</button>
				    		</span>
						</div>
						<div class="input-group input-file customInputMargin" name="docs">
							<span class="input-group-btn">
				        		<button class="btn btn-secondary btn-choose" type="button">Choose</button>
				    		</span>
				    		<input type="text" class="form-control" placeholder='Choose pdf file..' />
				    		<span class="input-group-btn">
				       			 <button class="btn btn-warning btn-reset" type="button">Reset</button>
				    		</span>
						</div>
				</div>	
				<div class="form-group">
					<input class="form-control form-control-md" type="hidden" name="note[user]" readonly placeholder="user" value="<%= currentUser.fullname %>">
				</div>
					<input class="container-fluid btn btn-success btn-lg customSubmitMargin" type="submit">
			</form>
		</div>
	</div>
</div>
		
<% include ../partials/footer %>
<% include ../functions/newnotefuncs %>
<% include ../functions/upload %>
<% include ../functions/loadnote %>